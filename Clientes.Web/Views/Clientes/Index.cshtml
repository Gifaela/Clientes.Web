@model IEnumerable<Clientes.Web.Models.ClienteViewModel>

@{
    ViewBag.Title = "Lista de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="color-petroleo"><i class="fa fa-users"></i> Lista de Clientes</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fa fa-plus"></i> Novo Cliente
        </a>
    </div>
    <hr />

    <table class="table table-striped table-hover shadow-sm rounded">
        <thead class="table-header-custom">
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>Sexo</th>
                <th>Situação</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.CpfFormatado</td>
                    <td>@item.DataNascimento.ToShortDateString()</td>
                    <td>
                        @(item.Sexo == "M" ? "Masculino" :
                          item.Sexo == "F" ? "Feminino" : "Não Informado")
                    </td>
                    <td>
                        @if (item.NomeSituacao == "Ativo")
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else if (item.NomeSituacao == "Inativo")
                        {
                            <span class="badge bg-secondary">Inativo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@item.NomeSituacao</span>
                        }
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Details", new { id = item.Id })"
                           class="btn btn-sm btn-outline-secondary me-1">
                            <i class="fa fa-eye"></i> Detalhes
                        </a>
                        <a href="@Url.Action("Edit", new { id = item.Id })"
                           class="btn btn-sm btn-outline-primary me-1">
                            <i class="fa fa-edit"></i> Editar
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })"
                           class="btn btn-sm btn-outline-danger">
                            <i class="fa fa-trash"></i> Excluir
                        </a>
                    </td>



                </tr>
            }
        </tbody>
    </table>
</div>
